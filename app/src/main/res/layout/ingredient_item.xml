<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dip"
    android:paddingBottom="3dip"
    android:paddingRight="2.5dip"
    android:paddingLeft="2.5dip"
    android:rowCount="2"
    android:columnCount="2"
    android:measureWithLargestChild="true"
    android:layout_centerHorizontal="true"
    android:background="@color/grid_lines"
    android:descendantFocusability="blocksDescendants">
    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_margin="1dip"
        android:textAlignment="center"
        android:gravity="center_horizontal|fill_horizontal"
        android:textSize="18sp"
        android:textColor="@color/ing_name"
        android:background="@color/background"
        android:textStyle="bold"
        android:layout_columnSpan="2"/>
    <TextView
        android:id="@+id/effect1"
        android:layout_width="0dip"
        android:layout_margin="1dip"
        android:textAlignment="center"
        android:layout_gravity="center|fill_horizontal"
        android:textSize="18sp"
        android:textColor="@color/effectBase"
        android:background="@color/background"
        android:layout_columnWeight="1"/>
    <TextView
        android:id="@+id/effect2"
        android:layout_width="0dip"
        android:layout_margin="1dip"
        android:layout_toRightOf="@id/effect1"
        android:textAlignment="center"
        android:layout_gravity="center|fill_horizontal"
        android:textSize="18sp"
        android:textColor="@color/effectBase"
        android:background="@color/background"
        android:layout_columnWeight="1"/>

    <TextView
        android:id="@+id/effect3"
        android:layout_width="0dip"
        android:layout_margin="1dip"
        android:textAlignment="center"
        android:layout_gravity="center|fill_horizontal"
        android:textSize="18sp"
        android:textColor="@color/effectBase"
        android:background="@color/background"
        android:layout_columnWeight="1"/>
    <TextView
        android:id="@+id/effect4"
        android:layout_width="0dip"
        android:layout_margin="1dip"
        android:layout_toRightOf="@id/effect3"
        android:textAlignment="center"
        android:layout_gravity="center|fill_horizontal"
        android:textSize="18sp"
        android:textColor="@color/effectBase"
        android:background="@color/background"
        android:layout_columnWeight="1"/>
</GridLayout>