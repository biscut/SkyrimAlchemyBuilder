<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dip"
    android:paddingTop="10dip"
    android:paddingBottom="10dip">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:paddingRight="5dip"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/item_name">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:id="@+id/topEffects">
            <TextView
                android:id="@+id/effect1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_weight="50"/>
            <TextView
                android:id="@+id/effect2"
                android:layout_toRightOf="@+id/effect1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_weight="50"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topEffects"
            android:weightSum="100">
            <TextView
                android:id="@+id/effect3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_weight="50"/>
            <TextView
                android:id="@+id/effect4"
                android:layout_toRightOf="@+id/effect3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_weight="50"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>